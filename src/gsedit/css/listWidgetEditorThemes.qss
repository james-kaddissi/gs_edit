QListWidget {
    background-color: #101316;
    color: #7a7e82;
    border: none;
    margin-top: -40px;
}

QListWidget::item {
    height: 25px;
    background-color: #101316;
    color: #7a7e82;
    font-family: "Consolas";
}
QListWidget::item:selected {
    height: 25px;
    background-color: #222a31;
    color: #7a7e82;
    font-family: "Consolas";
    border: none;
}
QListWidget::item:hover {
    height: 35px;
    background-color: #35393d;
    color: #7a7e82;
    font-family: "Consolas";
}