QTabWidget {
    background-color: #32303d;
    color: #bebebe;
}

QTabBar::tab {
    background-color: #0c0f11;
    color: #7a7e82;
    min-width: 10ex;
    min-height: 5ex;
    padding: 10px 25px;
    border-style: none;
}

QTabBar::tab::selected {
    color: #279fc4;
    border-style: none;
    background-color: #101316;
    border-bottom: none;
}

QTabBar::close-button {
    image: url("url_placeholder");
}